<h1>Please fill out the following form to add a new Contact to your address book</h1>
<%= form_tag '/add_contact_confirmation', method: :post do %>
  <div>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name %>
  </div>
   <div>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name %>
  </div>
   <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
   <div>
    <%= label_tag :phone %>
    <%= text_field_tag :phone %>
  </div>
  <div>
    <%= submit_tag 'Send' %>
  </div>
<% end %>