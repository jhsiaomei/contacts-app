<h2 align="center">Please use the following form to update this Contact in your address book:</h2>
<%= form_tag "/contacts/#{@contact.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, @contact.first_name, class: "form-control" %>
  </div>
   <div class="form-group">
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, @contact.last_name, class: "form-control" %>
  </div>
   <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, @contact.email, class: "form-control" %>
  </div>
   <div class="form-group">
    <%= label_tag :phone %>
    <%= text_field_tag :phone, @contact.phone, class: "form-control" %>
  </div>
  <div align="center">
    <%= button_tag 'Send', class: "btn btn-default" %>
  </div>
<% end %>